{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "build",
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "bin/**/*",
    "lib/**/*",
    "example/**/*",
    "vibe.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
